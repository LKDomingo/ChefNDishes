@model Chef;

<h1 class="display-6 text-center">Add a Chef!</h1>
<div class="">
    <div class="flex-fill d-flex justify-content-start">
        <a href="/"><h5>Home</h5></a>
    </div>
    <form action="/add/chef" method="post" class="mt-3">
        <div class="d-flex gap-5">
            <div class="form-group">
                <div><label for="FirstName">First Name</label></div>
                <input asp-for="FirstName" class="form-control">
                <small><span asp-validation-for="FirstName" class="text-danger"></span></small>
                <div class="mt-3"><label for="LastName">Last Name</label></div>
                <input asp-for="LastName" class="form-control">
                <small><span asp-validation-for="LastName" class="text-danger"></span></small>
            </div>
            <div class="form-group">
                <div><label for="DoB">Date of Birth</label></div>
                <input asp-for="DoB" type="date" class="form-control">
                <small><span asp-validation-for="DoB" class="text-danger"></span></small>
                <input class="mt-5 btn btn-primary" type="submit" value="Add a Chef">
            </div>
        </div>
    </form>
</div>
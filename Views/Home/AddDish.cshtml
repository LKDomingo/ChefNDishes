@model Dish;

<h1 class="display-6 text-center">Add a Dish!</h1>
<div class="">
    <div class="flex-fill d-flex justify-content-start">
        <a href="/"><h5>Home</h5></a>
    </div>
    <form action="/add/dish" method="post" class="mt-3">
        <div class="d-flex gap-5">
            <div class="form-group">
                <div><label for="DishName">Name of Dish</label></div>
                <input asp-for="DishName" class="form-control">
                <small><span asp-validation-for="DishName" class="text-danger"></span></small>
                <div class="mt-3"><label for="Calories"># of Calories</label></div>
                <input asp-for="Calories" class="form-control">
                <small><span asp-validation-for="Calories" class="text-danger"></span></small>
                <div class="mt-3"><label for="Description">Description</label></div>
                <textarea asp-for="Description" cols="30" rows="5" class="form-control"></textarea>
                <small><span asp-validation-for="Description" class="text-danger"></span></small>
            </div>
            <div class="form-group">
                <div><label for="ChefId">Chef</label></div>
                <select asp-for="ChefId" class="form-control">
                        @foreach(var i in @ViewBag.AllChefs)
                        {
                            <option value="@i.ChefId">@i.FirstName @i.LastName</option>
                        }
                </select>
                <small><span asp-validation-for="ChefId" class="text-danger"></span></small>
                <div class="d-flex justify-content-end">
                    <input class="mt-5 btn btn-primary" type="submit" value="Add Dish">
                </div>
            </div>
            <div class="form-group">
                <label for="Tastiness">Tastiness</label>
                <select asp-for="Tastiness" class="form-control">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
                <small><span asp-validation-for="Tastiness" class="text-danger"></span></small>
            </div>
        </div>
    </form>
</div>
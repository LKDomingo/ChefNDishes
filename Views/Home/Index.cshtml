@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center py-4">
    <div class="d-flex justify-content-between align-items-end">
        <div class="flex-fill">
            <h5 style="color: white;">Add a Chef</h5>
        </div>
        <div class="flex-fill">
            <h1 class="display-4">Chefs | <a class="display-4" href="/dishes">Dishes</a></h1>
        </div>
        <div class="flex-fill d-flex justify-content-end"><a href="/new">
                <h5>Add a Chef</h5>
            </a></div>
    </div>
    <div class="d-flex justify-content-start">
        <h1 class="display-6 pt-4">Check out our roster of Chefs!</h1>
    </div>
    <hr>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th># of Dishes</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var i in @ViewBag.AllChefs)
                {
                    <tr>
                        <td>@i.FirstName @i.LastName</td>
                        <td>@(DateTime.Now.Year - i.DoB.Year)</td>
                        <td>@i.Dishes.Count</td>
                    </tr>
                }
            }
        </tbody>

    </table>

</div>
